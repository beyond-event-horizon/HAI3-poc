{
  "name": "hai3-core-app",
  "version": "1.0.0",
  "description": "HAI3 UI interface demo built with Electron and React",
  "main": "build/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "set BROWSER=none && react-scripts start",
    "build": "react-scripts build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:all": "npm run build && npm run build:electron",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "npm run build:electron && electron .",
    "electron-dev": "npm run build:electron && concurrently \"npm start\" \"wait-on http://localhost:3000 --timeout 30000 && electron .\"",
    "electron-dev-alt": "npm start & sleep 5 && electron .",
    "electron-pack": "npm run build:all && electron-builder",
    "preelectron-pack": "npm run build:all"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@tinymce/tinymce-react": "^6.3.0",
    "@tiptap/extension-color": "^3.4.2",
    "@tiptap/extension-font-family": "^3.4.2",
    "@tiptap/extension-font-size": "^3.0.0-next.3",
    "@tiptap/extension-image": "^3.4.2",
    "@tiptap/extension-link": "^3.4.2",
    "@tiptap/extension-table": "^3.4.2",
    "@tiptap/extension-table-cell": "^3.4.2",
    "@tiptap/extension-table-header": "^3.4.2",
    "@tiptap/extension-table-row": "^3.4.2",
    "@tiptap/extension-text-align": "^3.4.2",
    "@tiptap/extension-text-style": "^3.4.2",
    "@tiptap/extension-underline": "^3.4.2",
    "@tiptap/react": "^3.4.2",
    "@tiptap/starter-kit": "^3.4.2",
    "lucide-react": "^0.263.1",
    "quill": "^2.0.3",
    "quill-better-table": "^1.2.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-quill": "^0.0.2",
    "react-scripts": "^5.0.1",
    "recharts": "^3.1.2",
    "tinymce": "^8.0.2"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^16.18.46",
    "@types/react": "^18.2.18",
    "@types/react-dom": "^18.2.7",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.0",
    "cross-env": "^10.1.0",
    "electron": "^38.3.0",
    "electron-builder": "^24.6.3",
    "electron-is-dev": "^2.0.0",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "typescript": "^4.9.5",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.hai3.core",
    "productName": "HAI3 Demo",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "public/electron.js",
      "public/hai3-logo.svg"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
